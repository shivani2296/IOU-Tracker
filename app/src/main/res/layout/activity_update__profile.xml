<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_Profile">

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Update Name"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_mobile"
        app:layout_constraintStart_toStartOf="@+id/editText_mobile" />

    <EditText
        android:id="@+id/editText_mobile"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Update Mobile Number"
        android:inputType="phone"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="30dp"
        android:text="Update "
        android:textSize="16dp"
        android:background="#000000"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/editText_mobile"
        app:layout_constraintTop_toBottomOf="@+id/editText_mobile" />

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Back"
        android:background="#F2E77302"
        app:layout_constraintEnd_toStartOf="@+id/button_update"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_update" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/button_update"
        app:layout_constraintStart_toEndOf="@+id/button_update"
        app:layout_constraintTop_toTopOf="@+id/button_update"
        app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

</androidx.constraintlayout.widget.ConstraintLayout>